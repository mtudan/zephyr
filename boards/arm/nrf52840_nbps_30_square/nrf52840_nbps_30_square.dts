/dts-v1/;
#include <nordic/nrf52840_qiaa.dtsi>

/ {
	model = "NBPS_30";
	compatible = "mobilisis,nbps_30_square";

	chosen {
		zephyr,console = &uart0;
		zephyr,shell-uart = &uart0;
		zephyr,uart-mcumgr = &uart0;
		zephyr,bt-mon-uart = &uart0;
		zephyr,bt-c2h-uart = &uart0;
		zephyr,sram = &sram0;
		zephyr,flash = &flash0;
		zephyr,code-partition = &slot0_partition;
	};

	leds {
		compatible = "gpio-leds";
		led0: led_0 {
			gpios = <&gpio0 25 GPIO_ACTIVE_HIGH>;
			label = "LED0";
		};

		led1: led_1 {
			gpios = <&gpio1 2 GPIO_ACTIVE_HIGH>;
			label = "LED1";
		};
	};

	/* These aliases are provided for compatibility with samples */
	aliases {
		led0 = &led0;
		led1 = &led1;
	};
};

&gpiote {
	status = "okay";
};

&gpio0 {
	status = "okay";
};

&gpio1 {
	status = "okay";
};

/* Console */
&uart0 {
	compatible = "nordic,nrf-uart";
	status = "okay";
	current-speed = <115200>;
	tx-pin = <20>;
	rx-pin = <22>;
};

/* BC66 modem */
&uart1 {
	status = "okay";
	current-speed = <115200>;
	tx-pin = <26>;
	rx-pin = <5>;

	quectel_bc66 {
		compatible = "quectel,bc66";
		label = "quectel_bc66";
		mdm-reset-gpios = <&gpio1 9 GPIO_ACTIVE_HIGH>;
		mdm-power-gpios = <&gpio0 12 GPIO_ACTIVE_HIGH>;
		mdm-power-sw-gpios = <&gpio1 4 GPIO_ACTIVE_HIGH>;
		status = "okay";
	};
};

&i2c0 {
	compatible = "nordic,nrf-twi";
	status = "okay";
	sda-pin = <4>;
	scl-pin = <27>;

	/* FXOS8700 */
	fxos8700@1e {
		compatible = "nxp,fxos8700";
		reg = <0x1e>;
		label = "FXOS8700";
		reset-gpios = <&gpio0 3 GPIO_ACTIVE_HIGH>; /* RST */
		int1-gpios = <&gpio1 14 GPIO_ACTIVE_LOW>; /* MAG */
		int2-gpios = <&gpio1 12 GPIO_ACTIVE_LOW>; /* ACC */
	};

	max17262@36 {
		compatible = "maxim,max17262";
		reg = <0x36>;
		label = "MAX17262";
		design-voltage = <3600>;
		desired-voltage = <3600>;
		desired-charging-current = <2000>;
		design-cap = <17000>;
		empty-voltage = <3300>;
		recovery-voltage = <3880>;
		charge-voltage = <3600>;
	};
};

/* Cannot be used together with i2c0 */
&spi0 {
	compatible = "nordic,nrf-spi";
	/*status = "okay";*/
	/*sck-pin = <27>;*/
	/*mosi-pin = <26>;*/
	/*miso-pin = <29>;*/
};

/* A111 radar */
&spi1 {
	compatible = "nordic,nrf-spi";
	status = "okay";
	sck-pin = <30>;
	mosi-pin = <29>;
	miso-pin = <31>;
};

&flash0 {
	/*
	 * For more information, see:
	 * http://docs.zephyrproject.org/latest/guides/dts/index.html#flash-partitions
	 */
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		boot_partition: partition@0 {
			label = "mcuboot";
			reg = <0x000000000 0x0000C000>;
		};
		slot0_partition: partition@c000 {
			label = "image-0";
			reg = <0x0000C000 0x00067000>;
		};
		slot1_partition: partition@73000 {
			label = "image-1";
			reg = <0x00073000 0x00067000>;
		};
		scratch_partition: partition@da000 {
			label = "image-scratch";
			reg = <0x000da000 0x0001e000>;
		};

		/*
		 * The flash starting at 0x000f8000 and ending at
		 * 0x000fffff is reserved for use by the application.
		 */

		/*
		 * Storage partition will be used by FCB/LittleFS/NVS
		 * if enabled.
		 */
		storage_partition: partition@f8000 {
			label = "storage";
			reg = <0x000f8000 0x00008000>;
		};
	};
};

&usbd {
	compatible = "nordic,nrf-usbd";
	status = "okay";
};
